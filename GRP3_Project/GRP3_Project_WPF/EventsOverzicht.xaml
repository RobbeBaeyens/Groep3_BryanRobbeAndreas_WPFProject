<Window x:Class="GRP3_Project_WPF.EventsOverzicht"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GRP3_Project_WPF"
        mc:Ignorable="d"
        Title="EventsOverzicht" Height="731" Width="411" Loaded="Window_Loaded">
    <StackPanel>
        <Grid Style="{StaticResource Header}">

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Button Grid.Column="0" x:Name="btnAddEvent"  Style="{StaticResource AddButtonHeader}">+</Button>
            <TextBlock Grid.Column="1" FontFamily="MS Mincho" Style="{StaticResource HeaderText}">EVENTS</TextBlock>
        </Grid>
    </StackPanel>
</Window>
