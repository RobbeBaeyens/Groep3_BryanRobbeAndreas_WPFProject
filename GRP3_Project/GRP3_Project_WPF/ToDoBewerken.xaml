<Window x:Class="GRP3_Project_WPF.ToDoBewerken"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GRP3_Project_WPF"
        mc:Ignorable="d"
        Title="ToDoBewerken" Height="731" Width="411">
    <StackPanel >

        <DockPanel>
            <Label Content="Titel:" FontSize="25px" Margin="0,10,0,0"/>
            <TextBox Text="Enter Titel" FontSize="25px" Width="260" Margin="0,10,0,0"/>
            <ToggleButton Style="{StaticResource ToDoButtonDone}" />
        </DockPanel>

        <TextBox Height="250" Margin="10,20,10,0"/>

        <Button Content="Save" Style="{StaticResource SaveButton}"/>
    </StackPanel>
</Window>

